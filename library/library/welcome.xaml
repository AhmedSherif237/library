<Page x:Class="library.welcome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:library"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="welcome" Background="#eee">

    <Grid>
        <TextBlock Height="74" TextWrapping="Wrap" Text="Welcome to Alpha library" FontSize="48" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0 0 0 250"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label FontWeight="Bold" Content="Wanna Sign As :" HorizontalAlignment="Center" Height="95" VerticalAlignment="Top" Width="344" FontSize="48" Background="#00000000"/>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="userbutton" Content="User" HorizontalAlignment="center" Height="60" VerticalAlignment="Top" Width="180" FontSize="36" Click="userbutton_Click" Background="#007ACC" Foreground="white" Margin="0 0 20 0" />
                <Button x:Name="adminButton" Content="Admin" Height="60"  VerticalAlignment="Top" Width="180" FontSize="36" Click="adminButton_Click" Background="#FFE64C4C" Foreground="white"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
